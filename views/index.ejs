<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MiniGamesGub</title>

    <link
      href="https://fonts.googleapis.com/css?family=Press+Start+2P"
      rel="stylesheet"
    />
    <script src="https://cdn.socket.io/socket.io-3.0.1.min.js"></script>
    <link rel="stylesheet" href="styles\chat.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles\index.css" />
  </head>

  <body>
    <h1 id="main-title">MiniGamesHub</h1>
    <% if (locals.auth) { %>
    <a id="login" href="/logout"
      >LogOut <img src="/images/Login-Icon.png" width="50px"
    /></a>
    <a id="room" href="/rooms"
      ><img src="/images/room.png" width="50px" />Rooms
    </a>

    <% } else {%>
    <a id="login" href="/login"
      >Login <img src="/images/Login-Icon.png" width="50px"
    /></a>
    <% }%> <%- include("Chat/chat"); -%>
    <div class="game_container">
      <a href="/SimonGame"><div id="SimonGame" class="gameIcon"></div></a>

      <a href="/Wordle"><div id="Wordle" class="gameIcon"></div></a>

      <a href="/Trivia"><div id="Trivia" class="gameIcon"></div></a>

      <a href="/FlappyBird"><div id="FlappyBird" class="gameIcon"></div></a>

      <a href="/RPS"><div id="RPS" class="gameIcon"></div></a>

      <a href="/TTT"><div id="TTT" class="gameIcon"></div></a>
    </div>
  </body>
</html>
