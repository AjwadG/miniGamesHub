<input type="checkbox" id="chat_check" />
<label class="chat-btn" for="chat_check">
  <i class="comment">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="30"
      height="30"
      fill="currentColor"
      class="bi bi-chat-dots"
      viewBox="0 0 16 16"
    >
      <path
        d="M5 8a1 1 0 1 1-2 0 1 1 0 0 1 2 0m4 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0m3 1a1 1 0 1 0 0-2 1 1 0 0 0 0 2"
      />
      <path
        d="m2.165 15.803.02-.004c1.83-.363 2.948-.842 3.468-1.105A9 9 0 0 0 8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6a10.4 10.4 0 0 1-.524 2.318l-.003.011a11 11 0 0 1-.244.637c-.079.186.074.394.273.362a22 22 0 0 0 .693-.125m.8-3.108a1 1 0 0 0-.287-.801C1.618 10.83 1 9.468 1 8c0-3.192 3.004-6 7-6s7 2.808 7 6-3.004 6-7 6a8 8 0 0 1-2.088-.272 1 1 0 0 0-.711.074c-.387.196-1.24.57-2.634.893a11 11 0 0 0 .398-2"
      />
    </svg>
  </i>
  <i class="close">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="30"
      height="30"
      fill="currentColor"
      class="bi bi-x-lg"
      viewBox="0 0 16 16"
    >
      <path
        d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z"
      />
    </svg>
  </i>
</label>
<div class="wrapper">
  <div class="chat_header"><h6>Global Chat</h6></div>
  <div id="chat"></div>
  <div class="chat-form">
    <input
      type="text"
      id="text"
      class="form-control"
      placeholder="your message"
    />
  </div>
</div>
<script>
  document.getElementById("text").addEventListener("keypress", (event) => {
    if (event.key == "Enter") {
      sendMessage();
    }
  });
  const chat = io("/");

  function sendMessage() {
    const message = document.getElementById("text").value;
    if (message == "") {
      return;
    }
    const div = document.createElement("div");
    div.innerHTML = `<b>YOU</b> : ${message}`;
    div.classList.add("chat_out");
    document.getElementById("chat").appendChild(div);

    document.getElementById("text").value = "";
    chat.emit("message", message);
  }
  chat.on("message", (data) => {
    const div = document.createElement("div");
    div.innerHTML = `${data.message} : <b>${data.name}</b>`;
    div.classList.add("chat_in");
    document.getElementById("chat").appendChild(div);
  });
</script>
