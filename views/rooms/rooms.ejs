<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rooms</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" href="styles\rooms.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Press+Start+2P"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <% if (locals.type == 0) { %>
    <form id="first" action="/rooms" method="post">
      <div id="join">
        <button type="submit" name="type" value="1">Join Room</button>
      </div>
      <div id="create">
        <button type="submit" name="type" value="2">Create Room</button>
      </div>
      <% if (locals.member ) { %>
      <div id="old"><a href="/room"> Your hub </a></div>
      <% } %>
    </form>
    <% } else if (locals.type == 1) {%>
    <div id="second">
      <div class="form">
        <h2>Please enter inivte code</h2>
        <input id="hubCode" type="text" required />
        <button id="join">Join Room</button>
      </div>
    </div>
    <% } else { %>
    <div id="second">
      <div class="form">
        <h2>Please enter hubName and MaxPlayers</h2>
        <input id="hubName" placeholder="HubName" type="text" />
        <input id="max" placeholder="Max Number of players" type="number" />
        <button id="create">Create Room</button>
      </div>
    </div>
    <% } %>

    <script src="scripts\rooms\rooms.js"></script>
  </body>
</html>
